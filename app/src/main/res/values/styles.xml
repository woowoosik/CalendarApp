<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Calendar" />

    <style name="Calendar.HeaderDateText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="Calendar.CalendarViewStyle">
        <item name="dayHeight">75dp</item>
    </style>

    <style name="Calendar.ItemViewStyle">
        <item name="dayTextSize">14dp</item>
    </style>

    <style name="FragmentMain" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/fragmentTitleColor</item>
        <item name="android:textSize">30dp</item>
    </style>


</resources>